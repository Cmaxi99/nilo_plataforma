# Auto detect text files and perform LF normalization
* text=auto

# Java source files
*.java text eol=lf
*.kt text eol=lf
*.groovy text eol=lf

# Properties and config files
*.properties text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.json text eol=lf

# Scripts
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Docker files
Dockerfile text eol=lf
docker-compose*.yml text eol=lf
.dockerignore text eol=lf

# SQL files
*.sql text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.ts text eol=lf

# Binary files (no conversion)
*.jar binary
*.class binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary